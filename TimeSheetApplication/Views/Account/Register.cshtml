@model TimeSheetApplication.Model.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}


<div>
    <div>

        <form method="post">

            <div class="form-outline mb-4">
                <input type="text" id="username" asp-for="UserName" class="form-control form-control-lg" style="color:white" placeholder="User Name:" />
                <label class="form-label" asp-for="UserName" style="color:white" for="username">UserName</label>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="password" asp-for="Password" class="form-control form-control-lg" style="color:white" placeholder="Password:" />
                <label class="form-label" asp-for="Password" style="color:white" for="password">Password</label>
            </div>

            <div class="form-outline mb-4">
                <input type="password" id="confirmpassword" asp-for="ConfirmPassword" class="form-control form-control-lg" style="color:white" placeholder="Confirm Password:" />
                <label class="form-label" asp-for="ConfirmPassword" style="color:white" for="confirmpassword">Confirm Password</label>
            </div>

            <div class="form-check d-flex justify-content-center mb-5">

                <a><input class="form-check-input me-2" type="checkbox" id="form2Example3cg" /> Terms And Condition</a>

            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">
                Sign Up
            </button>

        </form>

    </div>
</div>
